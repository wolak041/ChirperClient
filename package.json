{
  "name": "chirper-client",
  "version": "1.0.0",
  "description": "",
  "main": "./public/index.html",
  "scripts": {
    "start": "webpack-dev-server --open --config=webpack/dev.js --env.development && npm run prettier-watch",
    "build": "npm run lint && webpack -p --config=webpack/prod.js --env.production",
    "api:build": "npm run build && npm run api:clear-build && npm run api:copy-build",
    "api:clear-build": "rimraf ../api/public/*",
    "api:copy-build": "copyfiles -e dist/report.html -u 1 dist/**/*.* ../api/public",
    "prettier-watch": "onchange \"src/**/*\" -- prettier --write {{changed}}",
    "lint": "eslint src && stylelint src/**/*.scss",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wolak041/Chirper.git"
