  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wolak041/Chirper/issues"
  },
  "homepage": "https://github.com/wolak041/Chirper#readme",
  "dependencies": {
    "@loadable/component": "^5.12.0",
    "formik": "^2.1.4",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-textarea-autosize": "^8.0.1",
